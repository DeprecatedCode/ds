isFruit: {@it ['apple', 'banana', 'orange'].indexOf != -1}

'Is an apple a fruit? ' ('apple' isFruit) @Console.log

a: {red: 'Red fire trucks are everywhere.'}
({} a).red @Console.log

exclude: {
  array: @it,
  {condition: @it,
    {@it condition !} array.filter
  }
}

fruitOnly: isFruit cart.filter
nonFruit: isFruit (cart exclude)

'The cart has ' fruitOnly.length ' fruits and
              ' nonFruit.length ' other items in it.'               @Console.log

